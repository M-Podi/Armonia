<header>
    <h1>
        <!-- Icon -->
        <i class="fas fa-music"></i> Armonia - Magazin de Instrumente Muzicale
    </h1>

    <nav class="main-nav">
        <!-- Hamburger checkbox for small screens -->
        <input type="checkbox" id="menu-toggle" class="menu-toggle-checkbox">
        <label for="menu-toggle" class="menu-toggle-label">
            <i class="fas fa-bars"></i>
        </label>
        <ul class="nav-list">
            <li class="nav-item home">
                <a href="/" class="nav-link <%= currentPage === 'home' ? 'active' : '' %>">
                    <span class="text">Acasă</span>
                    <i class="fas fa-home"></i>
                </a>
                <ul class="submenu">
                    <li class="submenu-item"><a href="/#despre-noi" class="submenu-link">Despre noi</a></li>
                    <li class="submenu-item"><a href="/#instrumente" class="submenu-link">Instrumente</a></li>
                    <li class="submenu-item"><a href="/#servicii" class="submenu-link">Servicii</a></li>
                    <li class="submenu-item"><a href="/#oferte" class="submenu-link">Oferte speciale</a></li>
                    <li class="submenu-item"><a href="/#faq" class="submenu-link">Întrebări frecvente</a></li>
                </ul>
            </li>
            <li class="nav-item"><a href="/#instrumente" class="nav-link">Catalog instrumente</a></li>
            <li class="nav-item"><a href="/#servicii" class="nav-link">Servicii reparații</a></li>
            <li class="nav-item"><a href="/#catalog" class="nav-link">Accesorii</a></li>

            <!-- Adăugare opțiune Produse cu subopțiuni pentru categorii -->
            <li class="nav-item">
                <a href="/produse" class="nav-link <%= currentPage === 'produse' ? 'active' : '' %>">Produse</a>
                <ul class="submenu">
                    <li class="submenu-item"><a href="/produse"
                            class="submenu-link <%= !locals.categorie_selectata ? 'active' : '' %>">Toate</a></li>

                    <% if(locals.categorii_instrumente && categorii_instrumente.length> 0) { %>
                        <% categorii_instrumente.forEach(function(categorie) { %>
                            <li class="submenu-item">
                                <a href="/produse?categorie=<%= categorie %>"
                                    class="submenu-link <%= locals.categorie_selectata === categorie ? 'active' : '' %>">
                                    <%= categorie.charAt(0).toUpperCase() + categorie.slice(1) %>
                                </a>
                            </li>
                            <% }); %>
                                <% } %>
                </ul>
            </li>

            <li class="nav-item">
                <a href="#" class="nav-link">Pagini</a>
                <ul class="submenu">
                    <li class="submenu-item"><a href="/magazin"
                            class="submenu-link <%= currentPage === 'magazin' ? 'active' : '' %>">Magazin online</a>
                    </li>
                    <li class="submenu-item"><a href="/eveniment"
                            class="submenu-link <%= currentPage === 'eveniment' ? 'active' : '' %>">Evenimente</a></li>
                    <li class="submenu-item"><a href="/blog"
                            class="submenu-link <%= currentPage === 'blog' ? 'active' : '' %>">Blog muzical</a></li>
                    <li class="submenu-item">
                        <a href="/galerie"
                            class="submenu-link <%= currentPage === 'galerie' ? 'active' : '' %>">Galerie</a>
                    </li>
                    <li class="submenu-item"><a href="/about"
                            class="submenu-link <%= currentPage === 'about' ? 'active' : '' %>">Despre noi</a></li>
                </ul>
            </li>
        </ul>
    </nav>
</header>